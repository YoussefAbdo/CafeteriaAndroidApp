<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >


    <ImageView
        android:id="@+id/men_image_view"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pizza" />
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen3"
        android:orientation="vertical"
        android:layout_below="@+id/men_image_view">

    <TextView
        android:id="@+id/men_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"
        android:text="Name"
        android:textColor="@color/dark_green"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/men_name_text">
    <TextView
        android:id="@+id/men_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
       android:layout_centerHorizontal="true"
        android:text="28.0"
        android:textColor="@color/dark_green"
        android:textSize="15sp"
        android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/men_more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/men_price_text"
        android:layout_marginLeft="30dp"
        android:text="more..."
        android:textColor="@color/dark_green"
        android:textSize="15sp"
        android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>


