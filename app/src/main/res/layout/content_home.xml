<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_cafe"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.HomeActivity"
    tools:showIn="@layout/app_bar_home">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/fast_food_back"
        android:id="@+id/image"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/image"
        android:text="Cafeteria Online is the app where you can make your orders easily with no time . Search from many cafeterias your order and offers and you will be good served soon. "
        android:textColor="@color/dark_brown"
        android:background="@color/cafe"/>



    </RelativeLayout>



