<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.MenuItemInterface"
    tools:showIn="@layout/activity_menu_item_interface">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bg_screen3"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/favorite_menu"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/favorite" />

        <ImageView
            android:id="@+id/items_menu"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/menu_icon" />

        <ImageView
            android:id="@+id/basket_image_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/yellow_icon" />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:ems="10">

        <requestFocus />
    </EditText>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@+id/inputSearch"
        android:layout_margin="10dp"
        android:numColumns="2" />


</RelativeLayout>
