<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.CafeteriaInterface"
    tools:showIn="@layout/activity_cafeteria_interface"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/text1"
        android:text="Choose Your Cafeteria"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:paddingLeft="80dp"
        android:textSize="20sp"
        android:background="@color/bg_screen1"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cafeteria_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text1">
    </android.support.v7.widget.RecyclerView>
    <!-- Empty view is only visible when the list has no items. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_connection"/>
    <TextView
        android:id="@+id/no_internet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_connection"
        android:textAppearance="?android:textAppearanceMedium"/>

    </RelativeLayout>

</RelativeLayout>
