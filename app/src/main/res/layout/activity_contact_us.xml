<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green2"
    android:layout_margin="16dp"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.ContactUsActivity">


    <TextView
        android:id="@+id/feedback_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="FeedBack"
        android:background="@color/green1"
        android:textColor="@color/dark_green"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enter your message to this email"
        android:textColor="@color/dark_green"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/email_syntax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="feedback_group@hotmail.com"
        android:textColor="@color/dark_green"
        android:textSize="10sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_syntax"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/send_email_1"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@color/purple"
            android:text="Yahoo" />

        <Button
            android:id="@+id/send_email_2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/send_email_1"
            android:layout_marginTop="10dp"
            android:text="Gmail"
            android:background="@color/color7"/>

        <Button
            android:id="@+id/send_email_3"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@color/yellow"
            android:layout_below="@+id/send_email_1"
            android:layout_marginTop="10dp"
            android:text="Hotmail" />

        <Button
            android:id="@+id/send_email_4"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@color/blue"
            android:layout_below="@+id/send_email_3"
            android:layout_marginTop="10dp"
            android:text="Facebook" />

    </LinearLayout>


</RelativeLayout>
