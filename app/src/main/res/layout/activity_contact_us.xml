<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green2"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.ContactUsActivity">

    <TextView
        android:id="@+id/feedback_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/green2"
        android:text="Contact us"
        android:textColor="@color/dark_green"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="2000dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/gmail_icon" />

            <Button
                android:id="@+id/send_email_2"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/image2"
                android:background="@color/color7"
                android:text="Gmail"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_icon" />

            <Button
                android:id="@+id/send_email_4"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Facebook" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
