<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_Order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_light_cafe"

        >

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="King Burger"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Grilled beef burger patties, cheese slice, lettuce, onion, pickles and sauce, serve in 2 layers of bun bread."
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/dark_brown"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="non_vegeterian"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/orange"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="price"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/additions_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Additions"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
        <ListView
            android:id="@+id/addition_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
        </ListView>
        </LinearLayout>
        <TextView
            android:id="@+id/quantity_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Quantity"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:background="@color/yellow"
                android:text="-"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/remove"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:onClick="increment"
                android:background="@color/yellow"
                android:textSize="30dp"
                android:text="+" />

            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="9sp"
                android:textSize="30dp"
                android:text="2"
                android:background="@color/orange"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/basket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Basket"
            android:background="@color/yellow"/>

    </LinearLayout>
</ScrollView>