<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asucomputerengineeringteam.finalcafeteriaandroidmobileapp2017.Activities.CategoryInterface"
    tools:showIn="@layout/activity_category_interface"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/caf_upper_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/text1"
        android:text="Choose Your Category"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:textSize="20sp"
        android:background="@color/dark_rose"
        android:layout_below="@+id/caf_upper_image"/>

    <android.support.v7.widget.RecyclerView
        android:background="@color/rose"
        android:id="@+id/category_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text1">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
